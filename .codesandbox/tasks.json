{
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "pnpm install"
    }
  ],

  "tasks": {
    "dev": {
      "name": "dev",
      "command": "pnpm start",
      "runAtStart": true,
      "preview": {
        "port": 5173
      }
    },
    "GBC": {
      "name": "GBC",
      "command": "/gbc-v1.9.0-alpha.8/GBC --codesandbox -t --config .codesandbox/gbc_config.json",
      "runAtStart": true
    },
    "build": {
      "name": "build",
      "command": "pnpm build"
    },
    "preview": {
      "name": "preview",
      "command": "pnpm preview"
    }
  }
}
